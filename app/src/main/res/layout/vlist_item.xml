<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8sp"
    app:cardCornerRadius="8sp"
    android:layout_margin="10sp">


    <LinearLayout
        android:id="@+id/mltiOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginVertical="6sp"
        android:padding="8sp"
        android:orientation="vertical">


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reply"
            android:backgroundTint="@color/purple_200"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/User"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:layout_marginLeft="4sp"
                android:layout_marginTop="0sp"
                android:textColor="@color/black"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Vendorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendorname"
                android:layout_marginLeft="0sp"
                android:layout_marginTop="0sp"
                android:textColor="@color/white"
                android:textSize="0sp" />

            <ImageView
                android:id="@+id/star"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginStart="280sp"
                android:layout_marginTop="4sp"
                app:srcCompat="@drawable/star" />

            <TextView
                android:id="@+id/RatingAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0sp"
                android:layout_marginTop="4sp"
                android:text=" 3.5"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/WrittenComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WrittenComment"
            android:layout_marginLeft="4sp"
            android:layout_marginTop="0sp"
            android:textColor="#9F9D9D"
            android:textSize="18sp" />

    </LinearLayout>



</androidx.cardview.widget.CardView>